<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description or 'Saramonse Beauty' }}">
    <title>{{ title }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Jost:wght@300;400;500;600&family=Cormorant+Garamond:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="font-serif text-gray-800">
    {% set navTheme = "light" %}
    {% set navBg = "bg-white" %}
    {% set isHomepage = false %}
    {% include "navigation.njk" %}

    <main class="pt-28 lg:pt-32">
        {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuBtns = document.querySelectorAll('.mobile-menu-btn');
            const overlay = document.getElementById('mobile-menu');
            if (!overlay) return;

            function openMenu(btn) {
                const rect = btn.getBoundingClientRect();
                overlay.style.setProperty('--ox', (rect.left + rect.width / 2) + 'px');
                overlay.style.setProperty('--oy', (rect.top + rect.height / 2) + 'px');
                overlay.classList.remove('menu-closing');
                overlay.classList.add('menu-open');
                mobileMenuBtns.forEach(b => b.classList.add('menu-open'));
                document.documentElement.style.overflow = 'hidden';
            }

            function closeMenu() {
                overlay.classList.remove('menu-open');
                overlay.classList.add('menu-closing');
                overlay.addEventListener('animationend', () => {
                    overlay.classList.remove('menu-closing');
                }, { once: true });
                mobileMenuBtns.forEach(b => b.classList.remove('menu-open'));
                document.documentElement.style.overflow = '';
            }

            mobileMenuBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    if (overlay.classList.contains('menu-open')) {
                        closeMenu();
                    } else {
                        openMenu(btn);
                    }
                });
            });

            overlay.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', closeMenu);
            });
        });
    </script>
</body>
</html>
